        z-index: 5;
        opacity: 0.6;
      }

      .carousel-item.next {
        z-index: 5;
        opacity: 0.6;
      }

      .carousel-item.hidden {
        opacity: 0;
        pointer-events: none;
        z-index: 1;
      }
